<struts>
  
   <package name="Produto" extends="default" namespace="/produto"  >
      
      <action name="cadastraProduto" method="cadastraProduto"  class="br.com.PersistStruts.actions.ProdutoAction">
            <result name="success">/jsp/produto.jsp</result>
      </action>
      
      <action name="pesquisaProduto" method="pesquisaProduto"  class="br.com.PersistStruts.actions.ProdutoAction">
            <result name="success">/jsp/produto.jsp</result>
      </action>
      
       <action name="deletarProduto" method="deletarProduto"  class="br.com.PersistStruts.actions.ProdutoAction">
            <result name="success">/jsp/produto.jsp</result>
      </action>
      
       <action name="alterarProduto" method="alterarProduto"  class="br.com.PersistStruts.actions.ProdutoAction">
            <result name="success">/jsp/produto.jsp</result>
      </action>
   
   </package>
</struts>